// vercel.json
{
  "version": 2,
  "builds": [
    { "src": "api/index.py",     "use": "@vercel/python" },
    { "src": "api/sitemap.xml",  "use": "@vercel/static" }
  ],
  "routes": [
    // static file route into the function bundle
    { "src": "/sitemap\\.xml",   "dest": "/api/sitemap.xml" },
    { "src": "/(.*)",            "dest": "/api/index.py" }
  ]
}
